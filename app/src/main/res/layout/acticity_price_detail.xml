<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_header"
        layout="@layout/layout_header" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/rl_header"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="30dp"
        android:text="萝卜哥"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_header"
        android:layout_alignStart="@+id/iv_header"
        android:layout_alignLeft="@+id/iv_header"
        android:layout_marginTop="25dp"
        android:text="萝卜哥"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_second" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignStart="@+id/tv_date"
        android:layout_alignLeft="@+id/tv_date"
        android:layout_marginTop="22dp"
        android:text="萝卜哥"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_second" />

    <TextView
        android:id="@+id/tv_invites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginTop="22dp"
        android:text="萝卜哥"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_second" />


    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_invites"
        android:layout_alignStart="@+id/tv_invites"
        android:layout_alignLeft="@+id/tv_invites"
        android:layout_marginTop="28dp"
        android:text="奖励金额："
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_invites"
        android:layout_toRightOf="@+id/tv_text1"
        android:layout_toEndOf="@+id/tv_text1"
        android:layout_marginTop="28dp"
        android:text="￥888"
        android:textColor="@color/color_main"
        android:textSize="@dimen/txt_first" />
</RelativeLayout>