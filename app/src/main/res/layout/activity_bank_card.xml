<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <TextView
        android:id="@+id/tv_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="更换手机号码后，下次登录使用新手机号登录。"
        android:textColor="@color/txt_third"
        android:textSize="@dimen/btn_fillet_first" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text4"
        android:background="@color/white"
        android:padding="14dp"
        android:text="银行卡户名"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_old"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text4"
        android:layout_toEndOf="@+id/tv_text1"
        android:layout_toRightOf="@+id/tv_text1"
        android:background="@color/white"
        android:hint="请输入银行名称"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="银行开户行"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text2"
        android:layout_toRightOf="@+id/tv_text2"
        android:background="@color/white"
        android:hint="请输入银行开户行"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text2"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="开户名"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_new_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text2"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入银行开户名"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text3"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="银行卡号"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_bank_card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text3"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入银行卡号"
        android:inputType="number"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_bank_card_num"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="14dp"
        android:text="确认"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

</RelativeLayout>