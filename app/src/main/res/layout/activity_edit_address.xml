<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_alignStart="@+id/tv_text2"
        android:layout_alignLeft="@+id/tv_text2"
        android:layout_alignEnd="@+id/tv_text2"
        android:layout_alignRight="@+id/tv_text2"
        android:background="@color/white"
        android:padding="14dp"
        android:text="收货人"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_toEndOf="@+id/tv_text1"
        android:layout_toRightOf="@+id/tv_text1"
        android:background="@color/white"
        android:hint="请输入收货人名字"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="手机号码"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text2"
        android:layout_toRightOf="@+id/tv_text2"
        android:background="@color/white"
        android:hint="请输入收货人手机号码"
        android:inputType="phone"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text2"
        android:layout_alignStart="@+id/tv_text2"
        android:layout_alignLeft="@+id/tv_text2"
        android:layout_alignEnd="@+id/tv_text2"
        android:layout_alignRight="@+id/tv_text2"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="详细地址"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text2"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入收货人地址"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_address"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="14dp"
        android:text="修改"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

</RelativeLayout>