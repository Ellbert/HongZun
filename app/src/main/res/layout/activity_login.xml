    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v4"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:drawableStart="@mipmap/icn_password"
        android:drawableLeft="@mipmap/icn_password"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="14dp"
        android:textSize="@dimen/txt_second" />

    <View
        android:id="@+id/v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_password"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="30dp"
        android:background="@color/bg_view" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/v2"
        android:layout_margin="25dp"
        android:background="@drawable/bg_btn_large_green_selector"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_login"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="忘记密码"
        android:textColor="@color/txt_blue"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="新用户注册"
        android:textColor="@color/txt_blue"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_apple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_register"
        android:layout_margin="25dp"
        android:drawableTop="@mipmap/icn_address_orange_big"
        android:drawablePadding="8dp"
        android:text="苹果下载"
        android:textColor="@color/txt_blue"
        android:textSize="@dimen/txt_third"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_apple"
        android:layout_toEndOf="@+id/tv_apple"
        android:layout_toRightOf="@+id/tv_apple"
        android:drawableTop="@mipmap/icn_address_orange_big"
        android:drawablePadding="8dp"
        android:text="安卓下载"
        android:textColor="@color/txt_blue"
        android:textSize="@dimen/txt_third"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb_is_read"
        android:layout_below="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:text="我已阅读并同意"
        android:layout_marginBottom="25dp"
        android:textColor="@color/txt_second"
        android:textSize="@dimen/txt_check_box" />

    </RelativeLayout>
</ScrollView>