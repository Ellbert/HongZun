<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:contentDescription="@string/app_name"
        android:layout_below="@id/v1"
        android:layout_marginTop="269dp"
        android:background="@mipmap/bg_login"
        android:layout_width="match_parent"
        android:layout_height="110dp" />

    <ImageView
        android:id="@+id/im_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icn_logo" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_logo"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:drawableStart="@mipmap/icn_phone"
        android:drawableLeft="@mipmap/icn_phone"
        android:drawablePadding="15dp"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:padding="14dp"
        android:textSize="@dimen/txt_second" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_phone"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/bg_view" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:drawableStart="@mipmap/icn_code"
        android:drawableLeft="@mipmap/icn_code"
        android:drawablePadding="15dp"
        android:hint="请输入验证码"
        android:inputType="number"
        android:padding="14dp"
        android:textSize="@dimen/txt_second"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_below="@+id/v1"
        android:layout_alignEnd="@+id/et_code"
        android:layout_alignRight="@+id/et_code"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_tv_small_red_selector"
        android:text="发送验证码"
        android:textColor="@color/txt_code_selector"
        android:textSize="@dimen/txt_third"
        android:visibility="gone" />

    <View
        android:id="@+id/v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_code"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/bg_view"
        android:visibility="gone" />

    <EditText
        android:id="@+id/et_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:drawableStart="@mipmap/icn_invite"
        android:drawableLeft="@mipmap/icn_invite"
        android:drawablePadding="15dp"
        android:hint="请输入邀请码或邀请人电话号码"
        android:padding="14dp"
        android:textSize="@dimen/txt_second"
        android:visibility="gone" />

    <View
        android:id="@+id/v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_invite_code"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@color/bg_view"
        android:visibility="gone" />

