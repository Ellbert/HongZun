<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="支付密码"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/tv_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:maxLength="6"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />


    <TextView
        android:id="@+id/tv_text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignTop="@+id/et_branch"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_alignBottom="@+id/et_branch"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="确认密码"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:maxLength="6"
        android:inputType="numberPassword"
        android:background="@color/white"
        android:hint="请再次输入密码"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_branch"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignTop="@+id/et_new_confirm"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_alignBottom="@+id/et_new_confirm"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="手机号码"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_new_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_branch"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入注册手机号码"
        android:inputType="phone"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text3"
        android:layout_alignStart="@+id/tv_text1"
        android:layout_alignLeft="@+id/tv_text1"
        android:layout_alignTop="@+id/et_bank_card_num"
        android:layout_alignEnd="@+id/tv_text1"
        android:layout_alignRight="@+id/tv_text1"
        android:layout_alignBottom="@+id/et_bank_card_num"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:padding="14dp"
        android:text="验证码"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <EditText
        android:id="@+id/et_bank_card_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text3"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/tv_text3"
        android:layout_toRightOf="@+id/tv_text3"
        android:background="@color/white"
        android:hint="请输入验证码"
        android:inputType="number"
        android:padding="14dp"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="85dp"
        android:layout_height="29dp"
        android:layout_below="@+id/tv_text3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_tv_small_red_selector"
        android:gravity="center"
        android:text="发送验证码"
        android:textColor="@color/txt_code_selector"
        android:textSize="@dimen/txt_third"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_bank_card_num"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="14dp"
        android:text="确认"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_first" />

</RelativeLayout>