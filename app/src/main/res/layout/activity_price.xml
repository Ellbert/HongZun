<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <com.cecilia.framework.widget.LoadMoreRecyclerView
        android:id="@+id/lmrv_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="99dp"
            android:drawableTop="@mipmap/img_nothing"
            android:drawablePadding="50dp"
            android:gravity="center_horizontal"
            android:text="您还没有奖金哦，快去推荐好友吧~"
            android:textColor="@color/txt_third"
            android:textSize="@dimen/txt_first" />

        <TextView
            android:id="@+id/tv_recommend"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_btn_small_green_edge_normal"
            android:gravity="center"
            android:text="推荐好友"
            android:textSize="@dimen/txt_seven" />

    </LinearLayout>

</LinearLayout>