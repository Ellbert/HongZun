<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_page_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:background="@color/txt_blue"
                android:layout_width="match_parent"
                android:layout_height="350dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="定制商品"
                android:textColor="@color/txt_first"
                android:textSize="@dimen/txt_second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="￥100"
                android:textColor="@color/color_main"
                android:textSize="@dimen/txt_second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="已买0"
                android:textColor="@color/txt_second"
                android:textSize="@dimen/txt_second" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/icn_next_gray_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:text="查看商品规格"
                android:textColor="@color/txt_first"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_second"
                android:drawableRight="@mipmap/icn_next_gray_small"
                android:drawableEnd="@mipmap/icn_next_gray_small"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" />

            <TextView
                android:layout_marginTop="10dp"
                android:textSize="@dimen/txt_second"
                android:textColor="@color/txt_first"
                android:gravity="center"
                android:text="商品详情"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <View
        android:background="@color/bg_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:background="@color/color_main"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="立刻购买"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</LinearLayout>
