<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7.5dp"
    android:paddingBottom="7.5dp">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:gravity="bottom|center_horizontal"
        android:padding="5dp"
        android:text="失效"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toEndOf="@+id/iv_header"
        android:layout_toRightOf="@+id/iv_header"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_seven" />

    <TextView
        android:id="@+id/tv_failure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_header"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/iv_header"
        android:layout_toRightOf="@+id/iv_header"
        android:text="已失效去商城逛逛吧~"
        android:textColor="@color/txt_third"
        android:textSize="@dimen/txt_third" />

</RelativeLayout>