<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toEndOf="@+id/iv_photo"
        android:layout_toRightOf="@+id/iv_photo"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="saddddsdsasdwda撒大声地和挖掘和速度为很短速度哇哈USD我的速度撒多无多圣诞袜是飞洒的"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_second" />

    <TextView
        android:id="@+id/tv_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_name"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginTop="56dp"
        android:text="商品数量1件"
        android:textColor="@color/txt_third"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_name"
        android:layout_alignRight="@+id/tv_name"
        android:layout_marginTop="56dp"
        android:text="￥888"
        android:textColor="@color/txt_third"
        android:textSize="@dimen/txt_second" />

    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/iv_photo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/bg_btn_small_gray_edge_normal"
        android:gravity="center"
        android:text="再次购买"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/iv_photo"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/tv_buy"
        android:layout_toLeftOf="@+id/tv_buy"
        android:background="@drawable/bg_btn_small_gray_edge_normal"
        android:gravity="center"
        android:text="评价商品"
        android:textSize="@dimen/txt_third" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/iv_photo"
        android:layout_toStartOf="@+id/tv_comment"
        android:layout_toLeftOf="@+id/tv_comment"
        android:background="@drawable/bg_btn_small_gray_edge_normal"
        android:gravity="center"
        android:text="删除商品"
        android:textSize="@dimen/txt_third" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/bg_view" />

</RelativeLayout>