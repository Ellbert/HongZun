<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="15dp"
    android:background="@drawable/bg_btn_gray_enable"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_minus_selector"
        android:contentDescription="@string/loading"
        android:padding="4dp"
        android:src="@drawable/icn_minus" />

    <TextView
        android:id="@+id/tv_select_number"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_gray_normal"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/txt_third"
        android:textSize="@dimen/txt_fourth" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_add_selector"
        android:contentDescription="@string/loading"
        android:padding="4dp"
        android:src="@drawable/icn_add" />

</LinearLayout>