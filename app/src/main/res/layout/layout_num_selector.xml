<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    android:background="@drawable/bg_btn_large_dark_edge_normal"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginLeft="1.1dp"
        android:background="@drawable/bg_btn_add_selector"
        android:contentDescription="@string/loading"
        android:padding="5dp"
        android:src="@drawable/icn_minus" />

    <TextView
        android:id="@+id/tv_select_number"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/txt_first"
        android:textSize="@dimen/txt_second" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginRight="1.1dp"
        android:background="@drawable/bg_btn_add_selector"
        android:contentDescription="@string/loading"
        android:padding="5dp"
        android:src="@drawable/icn_add" />

</LinearLayout>