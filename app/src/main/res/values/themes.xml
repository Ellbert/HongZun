<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--应用的全局主题-->
    <style name="theme_app" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_main</item>
        <item name="colorPrimaryDark">@color/color_main</item>
        <item name="colorAccent">@color/color_main</item>
    </style>

    <!--加载对话框主题-->
    <style name="theme_dialog_loading" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/bg_dialog_progress</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--对话框主题-->
    <style name="theme_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:windowBackground">@drawable/bg_btn_large_white_normal</item>
    </style>

    <!--输入框主题-->
    <style name="theme_et" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/color_main</item>
        <item name="colorControlNormal">@color/bg_edit_line</item>
        <item name="android:textColorHint">@color/txt_third</item>
        <item name="android:textColor">@color/txt_first</item>
    </style>


    <attr name="type">
        <enum name="none" value="0" />
        <enum name="circle" value="1" />
        <enum name="rounded_rect" value="2" />
    </attr>
    <attr name="borderColor" format="color" />
    <attr name="borderWidth" format="dimension" />
    <attr name="rectRoundRadius" format="dimension" />

</resources>